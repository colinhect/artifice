# Example Artifice Configuration File
# 
# Copy this file to ~/.config/artifice/init.py and customize as needed
# This file is executed in a sandboxed environment on startup

# ============================================================================
# System Prompt
# ============================================================================
config.system_prompt =(
    "You are collaborating with the user to interface with their Linux system with access to a bash shell and a Python session. "
    "All Python code or shell commands in your responses are interpreted as requests by you to execute that code. Make one request at a time. "
    "Do not over explain unless asked to. Explanations precede the code. "
    "If you give more than one option then the first is considered the main option. "
    "Always use ```python or ```shell to mark code or shell command."
)
config.prompt_prefix = ""

# ============================================================================
# Agent Configuration
# ============================================================================

# Set the AI agent provider (claude, copilot, ollama, simulated)
config.provider = "claude"

# Set the model to use (provider-specific)
# Claude examples: "claude-sonnet-4-5", "claude-haiku-4-5"
# Copilot examples: "claude-sonnet-4.5", "claude-haiku-4.5", "gpt-5"
# Ollama examples: "llama3.2:1b", "qwen2.5:3b"
config.model = "claude-haiku-4-5"

# Ollama-specific: set the host URL (default: http://localhost:11434)
# config.ollama_host = "http://localhost:11434"

# ============================================================================
# Display Settings
# ============================================================================

# Show ASCII art banner on startup
config.banner = False

# Enable/disable markdown rendering for different output types
config.agent_markdown = True    # AI agent responses
config.python_markdown = False  # Python code output
config.shell_markdown = False   # Shell command output

# ============================================================================
# Behavior Settings
# ============================================================================

# Auto-send execution results to the agent
# When True, code execution results are automatically sent to the AI agent
config.auto_send_to_agent = True

# ============================================================================
# Session Settings
# ============================================================================

# Save session transcripts to markdown files
config.save_sessions = True

# Directory for session transcripts (default: ~/.artifice/sessions/)
# config.sessions_dir = "~/.artifice/sessions/"

# ============================================================================
# Shell Initialization
# ============================================================================

