# Example Artifice Configuration File (YAML)
# 
# Copy this file to ~/.config/artifice/init.yaml and customize as needed
# This YAML file provides a declarative configuration format for Artifice

# ============================================================================
# System Prompt
# ============================================================================
system_prompt: ""
prompt_prefix: ""

# TMUX integration
tmux_target: "session:window.pane"
tmux_prompt_pattern: '^\S+@\S+:\S+\$ '

# ============================================================================
# Assistant Configuration
# ============================================================================
assistant: "minimax"

assistants:
  minimax:
    provider: "huggingface"
    model: "MiniMaxAI/MiniMax-M2.5:novita"

# ============================================================================
# Display Settings
# ============================================================================

# Show ASCII art banner on startup
banner: false

# Enable/disable markdown rendering for different output types
assistant_markdown: true    # AI assistant responses
python_markdown: false  # Python code output
shell_markdown: false   # Shell command output

# ============================================================================
# Behavior Settings
# ============================================================================

# Auto-send execution results to the assistant
# When True, code execution results are automatically sent to the AI assistant
auto_send_to_assistant: true

# ============================================================================
# Shell Initialization
# ============================================================================

# Shell init script - commands to run before each shell command
# Useful for setting up aliases, environment variables, etc.
# shell_init_script: |
#   alias ll='ls -la'
#   export MY_VAR=value
