# Example Artifice Configuration File (YAML)
# 
# Copy this file to ~/.config/artifice/init.yaml and customize as needed
# This YAML file provides a declarative configuration format for Artifice

# ============================================================================
# System Prompt
# ============================================================================
system_prompt: |
  - You are collaborating with the user to interface with their Linux system with access to a bash shell and a Python session.
  - All Python code or shell commands in your responses are interpreted as requests by you to execute that code. Make one request at a time.
  - Do not over explain unless asked to. Explanations precede the code.
  - If you give more than one option then the first is considered the main option.
  - Always use ```python or ```shell to mark code or shell command.

prompt_prefix: ""

# ============================================================================
# Model Configuration
# ============================================================================
model: "llama"

models:
  llama:
    provider: "ollama"
    model: "llama3.2:1b"
  
  qwen2:
    provider: "ollama"
    model: "qwen2.5:3b"
  
  deepseek:
    provider: "ollama"
    model: "deepseek-r1:1.5b"
    thinking_budget: 1024

  minimax:
    provider: "huggingface"
    model: "MiniMaxAI/MiniMax-M2.5:novita"
  
  haiku:
    provider: "anthropic"
    model: "claude-haiku-4-5"
    thinking_budget: 1024
  
  sonnet:
    provider: "anthropic"
    model: "claude-sonnet-4-5"
    thinking_budget: 1024
  
  gpt-5:
    provider: "copilot"
    model: "gpt-5"

# ============================================================================
# Display Settings
# ============================================================================

# Show ASCII art banner on startup
banner: false

# Enable/disable markdown rendering for different output types
agent_markdown: true    # AI agent responses
python_markdown: false  # Python code output
shell_markdown: false   # Shell command output

# ============================================================================
# Behavior Settings
# ============================================================================

# Auto-send execution results to the agent
# When True, code execution results are automatically sent to the AI agent
auto_send_to_agent: true

# ============================================================================
# Session Settings
# ============================================================================

# Save session transcripts to markdown files
save_sessions: true

# Directory for session transcripts (default: ~/.artifice/sessions/)
# sessions_dir: "~/.artifice/sessions/"

# ============================================================================
# Shell Initialization
# ============================================================================

# Shell init script - commands to run before each shell command
# Useful for setting up aliases, environment variables, etc.
# shell_init_script: |
#   alias ll='ls -la'
#   export MY_VAR=value
